{
  "name": "slidev",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "export NODE_OPTIONS=--max-old-space-size=8192 && slidev build",
    "dev": "slidev --open",
    "export": "slidev export",
    "preview": "npx vite preview",
    "build_pres": "slidev build ${npm_config_name}.md --base /talks/${npm_config_name}/ --out dist/${npm_config_name}"
  },
  "dependencies": {
    "@slidev/cli": "^0.49.23",
    "@slidev/theme-default": "latest",
    "@slidev/theme-seriph": "latest",
    "vue": "^3.4.33"
  },
  "devDependencies": {
    "playwright-chromium": "^1.49.0",
    "prettier": "^3.3.3",
    "prettier-plugin-slidev": "^1.0.5"
  }
}
